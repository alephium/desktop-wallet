{
  "name": "alephium-wallet",
  "version": "0.11.1",
  "private": true,
  "homepage": "./",
  "author": "Alephium dev <dev@alephium.org>",
  "main": "public/electron.js",
  "scripts": {
    "build": "cross-env REACT_APP_VERSION=$npm_package_version INLINE_RUNTIME_CHUNK=false react-scripts build",
    "electron-dev": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && npx electron-builder",
    "electron-pack-windows": "npm run build && npx electron-builder -w",
    "electron-pack-macos": "npm run build && npx electron-builder --mac --universal",
    "electron-pack-ubuntu": "npm run build && npx electron-builder -l",
    "extension-build": "shx rm -rf build && npm run build && shx cp public/background.js public/manifest.json build",
    "extension-pack": "npm run extension-build && web-ext build --source-dir=build --artifacts-dir=. --filename=alephium-wallet.zip --overwrite-dest",
    "start": "cross-env REACT_APP_VERSION=$npm_package_version react-scripts start",
    "test": "react-scripts test",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts,.tsx"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.6",
    "@types/qrcode.react": "^1.0.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.3.0",
    "@types/styled-components": "^5.1.14",
    "@types/tinycolor2": "^1.4.3",
    "@types/yaireo__tagify": "^4.7.0",
    "@types/zxcvbn": "^4.4.1",
    "@yaireo/tagify": "^4.8.0",
    "alephium-js": "^0.11.0",
    "bip39": "^3.0.4",
    "classnames": "^2.3.1",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "electron": "^15.0.0",
    "electron-builder": "^22.13.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unused-imports": "^1.1.4",
    "framer-motion": "^4.1.17",
    "lodash": "^4.17.21",
    "lucide-react": "^0.16.0",
    "prettier": "^2.4.1",
    "qrcode.react": "^1.0.1",
    "react": "^17.0.2",
    "react-confetti": "^6.0.1",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^4.0.3",
    "shx": "^0.3.3",
    "styled-components": "^5.3.1",
    "tinycolor2": "^1.4.2",
    "type-fest": "^2.3.4",
    "typescript": "^4.4.3",
    "wait-on": "6.0.0",
    "web-ext": "^6.5.0",
    "zxcvbn": "^4.4.2"
  },
  "build": {
    "appId": "org.alephium.alephium-wallet",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "category": "Finance",
      "executableName": "alephium",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "productName": "Alephium",
    "directories": {
      "buildResources": "assets"
    },
    "afterPack": ".afterPack.js"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
