{
  "name": "alephium-wallet",
  "description": "The official Alephium wallet",
  "version": "1.5.0-rc.0",
  "homepage": "./",
  "author": "Alephium dev <dev@alephium.org>",
  "main": "public/electron.js",
  "scripts": {
    "build": "tsc && cross-env INLINE_RUNTIME_CHUNK=false VITE_VERSION=$npm_package_version vite build",
    "start": "cross-env VITE_VERSION=$npm_package_version vite",
    "start:electron": "concurrently \"cross-env VITE_VERSION=$npm_package_version vite\" \"electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-windows": "npm run build && electron-builder -w",
    "electron-pack-macos": "npm run build && electron-builder --mac --universal",
    "electron-pack-ubuntu": "npm run build && electron-builder -l",
    "electron-pack-linux:arm64": "npm run build && electron-builder -l --arm64",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@esbuild-plugins/node-modules-polyfill": "^0.1.4",
    "electron-context-menu": "^3.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@alephium/sdk": "0.5.0",
    "@alephium/walletconnect-provider": "0.2.1",
    "@alephium/web3": "0.2.0",
    "@json-rpc-tools/utils": "^1.7.6",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@types/events": "^3.0.0",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.6",
    "@types/react": "^17.0.24",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^17.0.9",
    "@types/semver-compare": "^1.0.1",
    "@types/styled-components": "^5.1.14",
    "@types/yaireo__tagify": "^4.15.1",
    "@types/zxcvbn": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@vitejs/plugin-react": "^2.2.0",
    "@walletconnect/sign-client": "2.1.4",
    "@walletconnect/types": "2.1.4",
    "@walletconnect/utils": "2.1.4",
    "@yaireo/tagify": "^4.12.0",
    "better-sqlite3": "^7.6.2",
    "bip39": "^3.0.4",
    "classnames": "^2.3.1",
    "colord": "^2.9.3",
    "compare-versions": "^5.0.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "electron": "^21.0.0",
    "electron-builder": "^23.0.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.29.0",
    "@electron/notarize": "^1.2.3",
    "electron-builder-notarize": "^1.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "events": "^3.3.0",
    "framer-motion": "^4.1.17",
    "i18next": "^21.8.10",
    "jsdom": "^20.0.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.90.0",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-color": "^2.19.3",
    "react-confetti": "^6.0.1",
    "react-detect-click-outside": "^1.1.2",
    "react-dom": "^17.0.2",
    "react-i18next": "^11.17.2",
    "react-is": "^17.0.2",
    "react-qr-code": "^2.0.3",
    "react-router-dom": "^6.3.0",
    "react-scrollbars-custom": "^4.1.1",
    "react-tooltip": "^4.2.21",
    "semver-compare": "^1.0.0",
    "styled-components": "^5.3.1",
    "type-fest": "^2.8.0",
    "typescript": "^4.4.3",
    "vite": "^3.2.5",
    "vite-plugin-svgr": "^2.2.2",
    "vitest": "^0.25.5",
    "wait-on": "^6.0.0",
    "zxcvbn": "^4.4.2"
  },
  "build": {
    "appId": "org.alephium.alephium-wallet",
    "productName": "Alephium",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "linux": {
      "category": "Finance",
      "target": [
        "AppImage",
        "deb",
        "snap"
      ]
    },
    "win": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist"
    },
    "directories": {
      "buildResources": "assets"
    },
    "afterPack": ".afterPack.js",
    "afterAllArtifactBuild": ".afterAllArtifactBuild.js",
    "afterSign": "electron-builder-notarize"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
