{
  "name": "alephium-wallet",
  "description": "The official Alephium wallet",
  "version": "2.0.0-rc.27",
  "homepage": "./",
  "author": "Alephium dev <dev@alephium.org>",
  "main": "public/electron.js",
  "scripts": {
    "build": "tsc && cross-env INLINE_RUNTIME_CHUNK=false VITE_VERSION=$npm_package_version vite build",
    "start:electron": "concurrently \"cross-env VITE_VERSION=$npm_package_version vite\" \"electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-windows": "npm run build && electron-builder -w",
    "electron-pack-macos": "npm run build && electron-builder --mac --universal",
    "electron-pack-ubuntu": "npm run build && electron-builder -l",
    "electron-pack-linux:arm64": "npm run build && electron-builder -l --arm64",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "syncTranslationFiles": "node scripts/syncTranslationFiles.js && prettier --write ./locales/**/*.json"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "dependencies": {
    "electron-context-menu": "^3.1.2",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@alephium/sdk": "0.6.4",
    "@alephium/token-list": "^0.0.7",
    "@alephium/walletconnect-provider": "^0.11.0",
    "@alephium/web3": "^0.11.0",
    "@electron/notarize": "^1.2.3",
    "@json-rpc-tools/utils": "^1.7.6",
    "@reduxjs/toolkit": "^1.9.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^14.0.0",
    "@types/events": "^3.0.0",
    "@types/lodash": "^4.14.173",
    "@types/node": "^16.9.6",
    "@types/react": "^18.0.26",
    "@types/react-color": "^3.0.6",
    "@types/react-dom": "^18.0.10",
    "@types/semver-compare": "^1.0.1",
    "@types/styled-components": "^5.1.14",
    "@types/yaireo__tagify": "^4.15.1",
    "@types/zxcvbn": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.30.1",
    "@vitest/web-worker": "^0.30.1",
    "@walletconnect/sign-client": "2.5.2",
    "@walletconnect/types": "2.5.2",
    "@walletconnect/utils": "2.5.2",
    "@yaireo/tagify": "^4.12.0",
    "better-sqlite3": "^8.3.0",
    "bip39": "^3.0.4",
    "classnames": "^2.3.1",
    "colord": "^2.9.3",
    "compare-versions": "^5.0.1",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.10.7",
    "electron": "^22.3.5",
    "electron-builder": "^23.0.3",
    "electron-builder-notarize": "^1.5.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "events": "^3.3.0",
    "framer-motion": "^10.11.6",
    "i18next": "^22.4.9",
    "jsdom": "^21.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.143.0",
    "nanoid": "^4.0.0",
    "posthog-js": "^1.52.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-apexcharts": "^1.4.0",
    "react-color": "^2.19.3",
    "react-confetti": "^6.0.1",
    "react-detect-click-outside": "^1.1.2",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.42.1",
    "react-i18next": "^12.1.4",
    "react-is": "^18.2.0",
    "react-qr-code": "^2.0.3",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.3.0",
    "react-scrollbars-custom": "^4.1.1",
    "react-tooltip": "^5.4.0",
    "redux": "^4.2.0",
    "semver-compare": "^1.0.0",
    "styled-components": "^5.3.1",
    "type-fest": "^3.5.1",
    "typescript": "^5.0.4",
    "vite": "^4.0.4",
    "vite-plugin-svgr": "^2.4.0",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.30.1",
    "wait-on": "^7.0.1",
    "zxcvbn": "^4.4.2"
  },
  "build": {
    "appId": "org.alephium.alephium-wallet",
    "productName": "Alephium",
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "node_modules/**/*"
    ],
    "linux": {
      "category": "Finance",
      "target": [
        "AppImage",
        "deb",
        "snap"
      ],
      "mimeTypes": [
        "x-scheme-handler/alephium"
      ],
      "desktop": {
        "exec": "alephium %U"
      }
    },
    "win": {
      "artifactName": "${productName}-${version}.${ext}",
      "publisherName": [
        "Panda Software SA"
      ]
    },
    "mac": {
      "hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist"
    },
    "directories": {
      "buildResources": "assets"
    },
    "afterPack": ".afterPack.js",
    "afterAllArtifactBuild": ".afterAllArtifactBuild.js",
    "afterSign": "electron-builder-notarize",
    "protocols": [
      {
        "name": "alephium",
        "schemes": [
          "alephium"
        ]
      }
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
